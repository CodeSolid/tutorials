  </path>
  
  <path id="library.maven:_org.springframework:spring-context:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-context/3.2.0.RELEASE/spring-context-3.2.0.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-core:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-core/3.2.0.RELEASE/spring-core-3.2.0.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-expression:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-expression/3.2.0.RELEASE/spring-expression-3.2.0.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-test:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-test/3.2.0.RELEASE/spring-test-3.2.0.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-web:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-web/3.2.0.RELEASE/spring-web-3.2.0.RELEASE.jar"/>
  </path>
  
  <path id="library.maven:_org.springframework:spring-webmvc:3.2.0.release.classpath">
    <pathelement location="${path.variable.maven_repository}/org/springframework/spring-webmvc/3.2.0.RELEASE/spring-webmvc-3.2.0.RELEASE.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SpringJUnitIntro -->
  
  <dirname property="module.springjunitintro.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.springjunitintro" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.springjunitintro" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.springjunitintro" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.springjunitintro" value="${compiler.args}"/>
  
  <property name="springjunitintro.output.dir" value="${module.springjunitintro.basedir}/target/classes"/>
  <property name="springjunitintro.testoutput.dir" value="${module.springjunitintro.basedir}/target/test-classes"/>
  
  <path id="springjunitintro.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="springjunitintro.module.production.classpath">
    <path refid="${module.jdk.classpath.springjunitintro}"/>
    <path refid="library.maven:_org.springframework:spring-core:3.2.0.release.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_org.springframework:spring-context:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-aop:3.2.0.release.classpath"/>
    <path refid="library.maven:_aopalliance:aopalliance:1.0.classpath"/>
    <path refid="library.maven:_org.springframework:spring-beans:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-expression:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.2.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.2.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
  </path>
  
  <path id="springjunitintro.runtime.production.module.classpath">
    <pathelement location="${springjunitintro.output.dir}"/>
    <path refid="library.maven:_org.springframework:spring-core:3.2.0.release.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_org.springframework:spring-context:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-aop:3.2.0.release.classpath"/>
    <path refid="library.maven:_aopalliance:aopalliance:1.0.classpath"/>
    <path refid="library.maven:_org.springframework:spring-beans:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-expression:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.2.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.2.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
  </path>
  
  <path id="springjunitintro.module.classpath">
    <path refid="${module.jdk.classpath.springjunitintro}"/>
    <pathelement location="${springjunitintro.output.dir}"/>
    <path refid="library.maven:_org.springframework:spring-core:3.2.0.release.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_org.springframework:spring-context:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-aop:3.2.0.release.classpath"/>
    <path refid="library.maven:_aopalliance:aopalliance:1.0.classpath"/>
    <path refid="library.maven:_org.springframework:spring-beans:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-expression:3.2.0.release.classpath"/>
    <path refid="library.maven:_junit:junit:4.8.2.classpath"/>
    <path refid="library.maven:_org.springframework:spring-test:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-webmvc:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-web:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.2.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.2.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
  </path>
  
  <path id="springjunitintro.runtime.module.classpath">
    <pathelement location="${springjunitintro.testoutput.dir}"/>
    <pathelement location="${springjunitintro.output.dir}"/>
    <path refid="library.maven:_org.springframework:spring-core:3.2.0.release.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_org.springframework:spring-context:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-aop:3.2.0.release.classpath"/>
    <path refid="library.maven:_aopalliance:aopalliance:1.0.classpath"/>
    <path refid="library.maven:_org.springframework:spring-beans:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-expression:3.2.0.release.classpath"/>
    <path refid="library.maven:_junit:junit:4.8.2.classpath"/>
    <path refid="library.maven:_org.springframework:spring-test:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-webmvc:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.springframework:spring-web:3.2.0.release.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.2.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.2.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.springjunitintro">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.springjunitintro">
    <patternset refid="excluded.from.module.springjunitintro"/>
  </patternset>
  
  <path id="springjunitintro.module.sourcepath">
    <dirset dir="${module.springjunitintro.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="springjunitintro.module.test.sourcepath">
    <dirset dir="${module.springjunitintro.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.springjunitintro" depends="compile.module.springjunitintro.production,compile.module.springjunitintro.tests" description="Compile module SpringJUnitIntro"/>
  
  <target name="compile.module.springjunitintro.production" depends="register.custom.compilers" description="Compile module SpringJUnitIntro; production classes">
    <mkdir dir="${springjunitintro.output.dir}"/>
    <javac2 destdir="${springjunitintro.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.springjunitintro}/javac">
      <compilerarg line="${compiler.args.springjunitintro}"/>
      <bootclasspath refid="springjunitintro.module.bootclasspath"/>
      <classpath refid="springjunitintro.module.production.classpath"/>
      <src refid="springjunitintro.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.springjunitintro"/>
    </javac2>
    
    <copy todir="${springjunitintro.output.dir}">
      <fileset dir="${module.springjunitintro.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.springjunitintro.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.springjunitintro.tests" depends="register.custom.compilers,compile.module.springjunitintro.production" description="compile module SpringJUnitIntro; test classes" unless="skip.tests">
    <mkdir dir="${springjunitintro.testoutput.dir}"/>
    <javac2 destdir="${springjunitintro.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.springjunitintro}/javac">
      <compilerarg line="${compiler.args.springjunitintro}"/>
      <bootclasspath refid="springjunitintro.module.bootclasspath"/>
      <classpath refid="springjunitintro.module.classpath"/>
      <src refid="springjunitintro.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.springjunitintro"/>
    </javac2>
    
    <copy todir="${springjunitintro.testoutput.dir}">
      <fileset dir="${module.springjunitintro.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.springjunitintro" description="cleanup module">
    <delete dir="${springjunitintro.output.dir}"/>
    <delete dir="${springjunitintro.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.springjunitintro" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.springjunitintro" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>